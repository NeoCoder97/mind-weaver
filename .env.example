# MindWeaver Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===== LLM Configuration =====
# Enable LLM features (digest generation)
LLM_ENABLED=true

# LLM Provider: openai, zhipuai, deepseek
LLM_PROVIDER=zhipuai

# API Base URL (optional, uses provider default if not set)
# LLM_API_BASE=https://api.openai.com/v1

# API Key (required)
LLM_API_KEY=your-llm-api-key-here

# Model name
LLM_MODEL=glm-4.7

# ===== Email Configuration =====
# Enable email digest
EMAIL_ENABLED=true

# SMTP Settings
EMAIL_SMTP_HOST=smtp.qq.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@qq.com
EMAIL_PASSWORD=your-smtp-password-or-authorization-code
EMAIL_USE_TLS=true

# Email addresses
EMAIL_FROM_ADDRESS=your-email@qq.com
# Recipients (JSON array format)
EMAIL_TO_ADDRESSES=["recipient1@example.com", "recipient2@example.com"]

# ===== Digest Configuration =====
# Enable automatic digest generation
DIGEST_ENABLED=false

# Digest schedules (cron expressions, JSON array format)
# Default: daily at 10:00 and 16:00
DIGEST_SCHEDULES=["0 10 * * *", "0 16 * * *"]

# Entries per feed to include
DIGEST_ENTRIES_PER_FEED=2

# Maximum age of entries to include (hours)
DIGEST_MAX_AGE_HOURS=24

# Digest mode: aggregate or individual
DIGEST_MODE=aggregate

# Email subject prefix
DIGEST_SUBJECT_PREFIX=[MindWeaver]
